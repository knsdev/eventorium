<!DOCTYPE html>
<html>

{% set websiteTitle = 'Eventorium' %}
{% set currentRoute = app.request.attributes.get("_route") %}

<head>
  <meta charset="UTF-8">
  <title>{% block title %}{{ websiteTitle }} - {% endblock %}</title>
  <link rel="icon"
    href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  {% block stylesheets %}
  {% endblock %}

  {% block javascripts %}
  {% block importmap %}{{ importmap('app') }}{% endblock %}
  {% endblock %}
</head>

<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container px-sm-0">
      <a class="navbar-brand" style="position: relative; width:14rem;" href="{{ path('app_event_index') }}">
        <div class="h1 font-family-sriracha" style="position: absolute; top: -1.384rem; left: 0">{{ websiteTitle }}
        </div>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav" style="font-size: 1.25rem">
          <li class="nav-item">
            {% if currentRoute=='app_event_index' %}
            <a class="nav-link active" aria-current="page" href="{{ path('app_event_index') }}">Home</a>
            {% else %}
            <a class="nav-link" href="{{ path('app_event_index') }}">Home</a>
            {% endif %}
          </li>
          <li class="nav-item">
            {% if currentRoute=='app_event_type_index' %}
            <a class="nav-link active" aria-current="page" href="{{ path('app_event_type_index') }}">Event Types</a>
            {% else %}
            <a class="nav-link" href="{{ path('app_event_type_index') }}">Event Types</a>
            {% endif %}
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <section id="hero">
    <div style="position: relative; z-index: -10">
      <img src="{{ asset('images/concert-3084876_1920.jpg') }}" alt="hero image"
        style="width: 100%; height: 18rem; object-fit:cover">
      <div class="img-text-overlay comic-relief">
        <div>Where Moments</div>
        <div style="margin-left: 3rem;">Become Memories</div>
      </div>
    </div>
    </div>
  </section>
  {% block body %}{% endblock %}
  <div class="container-fluid">
    <footer class="mt-5">
      <div class="border-top py-4">
        <p class="text-center text-body-secondary mb-0">© 2025 Kim Niklas Schl&uuml;ter</p>
      </div>
    </footer>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
    crossorigin="anonymous"></script>
</body>

</html>