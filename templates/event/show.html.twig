{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<h1>Event</h1>

<table class="table">
  <tbody>
    <tr>
      <th>Id</th>
      <td>{{ event.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ event.name }}</td>
    </tr>
    <tr>
      <th>LocationName</th>
      <td>{{ event.address.locationName }}</td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{ event.description }}</td>
    </tr>
    <tr>
      <th>StartTime</th>
      <td>{{ event.startTime ? event.startTime|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
      <th>EndTime</th>
      <td>{{ event.endTime ? event.endTime|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
      <th>Image</th>
      <td>{{ event.image }}</td>
    </tr>
    <tr>
      <th>Capacity</th>
      <td>{{ event.capacity }}</td>
    </tr>
    <tr>
      <th>Address</th>
      <td>{{ event.address.streetName
        ~ ' ' ~ event.address.streetNumber
        ~ ', ' ~ event.address.zipCode
        ~ ' ' ~ event.address.cityName
        ~ ', ' ~ event.address.countryName }}</td>
    </tr>
    <tr>
      <th>ContactEmail</th>
      <td>{{ event.contactEmail }}</td>
    </tr>
    <tr>
      <th>ContactPhoneNumber</th>
      <td>{{ event.contactPhoneNumber }}</td>
    </tr>
    <tr>
      <th>Url</th>
      <td>{{ event.url }}</td>
    </tr>
  </tbody>
</table>

<a href="{{ path('app_event_index') }}">back to list</a>

<a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>

{{ include('event/_delete_form.html.twig') }}
{% endblock %}